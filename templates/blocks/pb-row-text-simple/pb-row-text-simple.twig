{% extends 'page-builder/block-wrapper.twig' %}

{% set post = Post(fields) %}

{% set classname = classname|default('') %}
{% set attributes = attributes|default([]) %}
{% set udid = udid|default('pb_row_text-simple-' ~ random()) %}

{% set title = post.get_field('title') %}
{% set text = post.get_field('text') %}
{% set buttons = post.get_field('buttons') %}
{% set position = post.get_field('position')|default('right') %}
{% set width = post.get_field('width')|default('default') %}

{% block row_wrapper %}
<div
  id="{{ udid }}"
  class="pb-row pb-row-text-simple container-fluid --position-{{ position }} --width-{{ width }} {{ classname }}"
  {{ attributes|join(' ') }}
  data-scroll
  data-scroll-offset="100px,0"
  data-module-delay
>

  {% if title %}
  <header class="pb-row-text-simple__header mb-50">
    <h2 class="pb-row-text-simple__title ff-heading fz-24 fz-lg-36 lh-none m-0">{{ title }}</h2>
  </header>
  {% endif %}

  {% if text or buttons %}
  <aside class="pb-row-text-simple__content">
    <div class="pb-row-text-simple__text fz-16 fz-xl-18 lh-relaxed lh-xl-chill wysiwyg">
      {{ text }}
    </div>

    {% if buttons %}
      {% include 'partial/links-nav.twig' with {
        'buttons': buttons,
        'classname': 'pb-row-text-simple__buttons mt-20 mt-lg-50'
      } only %}
    {% endif %}
  </aside>
  {% endif %}

</div>
{% endblock %}
