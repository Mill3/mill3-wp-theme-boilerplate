{% set classname = classname|default(null) %}
{% set attributes = attributes|default([]) %}
{% set tagname = tagname|default('h3') %}
{% set css_mode = css_mode|default(false) %}

<header
  class="text-ticker d-flex flex-nowrap align-items-center overflow-hidden {{ classname }}"
  data-module="text-ticker"
  data-text-ticker="{{ css_mode ? 'false' : 'true' }}"
  {{ attributes|join(' ') }}
>
  <{{tagname}} class="text-ticker__text m-0 p-0" aria-label="{{ aria_label|default(text) }}">{{ text }}</{{tagname}}>
</header>
