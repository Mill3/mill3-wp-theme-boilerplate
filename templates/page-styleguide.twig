{% extends "base.twig" %}

{% block head %}
<style type="text/css">
  /*.styleguide-row:not(.flex-column) {
    margin: 0 -15px;
  }*/

  .styleguide-color {
    flex: 0 1 100px;
    width: 100px;
    height: 30px;

    border-radius: 8px;
    box-shadow: 0 10px 10px 0 rgba(179, 179, 179, 0.4);
  }

/*  .styleguide-font {
    position: relative;
    margin: 0 0 30px 0;
  }*/
  .styleguide-font:last-child { margin-bottom: 0; }
  .styleguide-font:empty::before {
    content: "The quick brown fox jumps over the lazy dog";
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
  }

  /*.styleguide-font[data-label]::after {
    color: #a4a4a4 !important;
    font-family: monospace;
    font-size: 10px !important;
    padding-top: 0 !important;
  }*/

  .styleguide [data-label] { position: relative; }
  .styleguide [data-label]::after {
    content: attr(data-label);
    display: block;
    position: absolute;
    top: calc(100% + 10px);
    left: 0;
    height: 20px;

    display: flex;
    align-items: center;

    padding: 0px 5px;
    white-space: nowrap;

    font-size: 12px;
    font-family: var(--ff-mono);
    font-style: normal;
    font-weight: 400;
    color: #666;

    background-color: var(--color-secondary);
    color: var(--color-white);

    opacity: 0.0001;
    transition: opacity 200ms linear;
    z-index: 20;

    pointer-events: none;
  }
  .styleguide [data-label]:hover::after { opacity: 1.0001; }

</style>
{% endblock %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="styleguide container-fluid pt-40 pb-40 pt-xl-80 pb-xl-80 d-flex flex-column grid-gap-30 grid-gap-xl-50">
			<h1 class="styleguide-title fz-24 fz-md-36 fz-xl-48 lh-none fw-400 m-0">{{post.title}}</h1>
      <!-- Colors -->
			<div class="d-flex flex-column grid-gap-20">
				<h2 class="styleguide-subtitle color-secondary ff-body tt-uppercase fz-12 fw-700 m-0">Colors</h2>
        <div class="styleguide-row d-flex flex-wrap grid-gap-20">
          <div class="styleguide-color bg-color-black" data-label="black"></div>
          <div class="styleguide-color bg-color-white" data-label="white"></div>
          <div class="styleguide-color bg-color-primary" data-label="primary"></div>
          <div class="styleguide-color bg-color-secondary" data-label="secondary"></div>
        </div>
        <div class="styleguide-row d-flex flex-wrap grid-gap-20">
          <div class="styleguide-color bg-gray-200" data-label="gray-200"></div>
          <div class="styleguide-color bg-gray-300" data-label="gray-300"></div>
          <div class="styleguide-color bg-gray-400" data-label="gray-400"></div>
          <div class="styleguide-color bg-gray-500" data-label="gray-500"></div>
          <div class="styleguide-color bg-gray-600" data-label="gray-600"></div>
        </div>
			</div>

      <!-- Font-family & Font-style -->
			<div class="d-grid grid-column-xl-2 grid-gap-20">
				<aside class="d-flex flex-column grid-gap-20">
					<h2 class="styleguide-subtitle color-secondary ff-body tt-uppercase fz-12 fw-700 m-0">Font-family</h2>
					<div class="styleguide-font ff-heading fz-20 fz-md-24 fz-xl-36 lh-none" data-label="ff-heading">Times Now</div>
				</aside>
				<aside class="d-flex flex-column grid-gap-20">
					<h2 class="styleguide-subtitle color-secondary ff-body tt-uppercase fz-12 fw-700 m-0">Font-weight</h2>
					<div class="styleguide-row d-flex flex-column grid-gap-20 ff-heading fz-20 fz-md-24 fz-xl-36 lh-none">
						{# <div class="styleguide-font fw-300">Light (300)</div>
						<div class="styleguide-font fw-300 fs-italic">Light Italic</div> #}
						<div class="styleguide-font fw-400" data-label="ff-heading fw-400">Regular (400)</div>
						<div class="styleguide-font fw-400 fs-italic" data-label="ff-heading fw-400 fs-italic">Regular Italic</div>
            <div class="styleguide-font fw-700" data-label="ff-heading fw-700">Bold (700)</div>
            <div class="styleguide-font fw-700 fs-italic" data-label="ff-heading fw-700 fs-italic">Bold Italic</div>
					</div>
				</aside>
			</div>

      <div class="d-grid grid-column-xl-2 grid-gap-20">
        <aside class="d-flex flex-column grid-gap-20">
          <h2 class="styleguide-subtitle color-secondary ff-body tt-uppercase fz-12 fw-700 m-0">Font-family</h2>
          <div class="styleguide-font ff-body fz-18 fz-md-20 fz-xl-24 lh-125" data-label="ff-body">Inter</div>
        </aside>
        <aside class="d-flex flex-column grid-gap-20">
          <h2 class="styleguide-subtitle color-secondary ff-body tt-uppercase fz-12 fw-700 m-0">Font-weight</h2>
          <div class="styleguide-row d-flex flex-column grid-gap-20 ff-body fz-18 fz-md-20 fz-xl-24 lh-125">
            <div class="styleguide-font fw-300" data-label="ff-body fw-300">Light (300)</div>
            <div class="styleguide-font fw-300 fs-italic" data-label="ff-body fw-300 fs-italic">Light Italic</div>
            <div class="styleguide-font fw-400" data-label="ff-body fw-400">Regular (400)</div>
            <div class="styleguide-font fw-400 fs-italic" data-label="ff-body fw-400 fs-italic">Regular Italic</div>
            <div class="styleguide-font fw-700" data-label="ff-body fw-700">Bold (700)</div>
            <div class="styleguide-font fw-700 fs-italic" data-label="ff-body fw-700 fs-italic">Bold Italic</div>
          </div>
        </aside>
      </div>

      <div class="d-flex flex-column grid-gap-20">
        <h2 class="styleguide-subtitle color-secondary ff-body tt-uppercase fz-12 fw-700 m-0">Stylings & Font-sizes</h2>
        <div class="d-flex flex-column grid-gap-20">
          <div class="styleguide-font fz-48 ff-heading lh-none" data-label="ff-heading fz-48 lh-none"></div>
          <div class="styleguide-font fz-36 ff-heading lh-none" data-label="ff-heading fz-36 lh-none"></div>
          <div class="styleguide-font fz-24 ff-body lh-125" data-label="ff-body fz-24 lh-125"></div>
          <div class="styleguide-font fz-20 ff-body lh-125" data-label="ff-body fz-20 lh-125"></div>
          <div class="styleguide-font fz-18 ff-body lh-150" data-label="ff-body fz-18 lh-150"></div>
          <div class="styleguide-font fz-16 ff-body lh-150" data-label="ff-body fz-16 lh-150"></div>
          <div class="styleguide-font fz-14 ff-body lh-150" data-label="ff-body fz-14 lh-150"></div>
        </div>
      </div>

      <!-- Buttons -->
      <div class="d-flex flex-column grid-gap-20">
  			<h2 class="styleguide-subtitle color-secondary ff-body tt-uppercase fz-12 fw-700 m-0">UI & Buttons</h2>
        <div class="d-grid grid-column-xl-2 grid-gap-20">
          <aside class="d-flex flex-column grid-gap-20 grid-gap-20 p-20 pb-xl-40 bg-gray-200 color-black">
            <h2 class="styleguide-subtitle ff-body tt-uppercase fz-12 fw-700 m-0">Light</h2>
            <div class="d-flex align-items-center grid-gap-20">
            {% include 'partial/button.twig' with {'title': 'Button CTA', 'style': 'cta', 'attributes': ['data-label="cta"']} only %}
            {% include 'partial/button.twig' with {'title': 'Outline CTA', 'style': 'cta', 'variation': 'outline', 'attributes': ['data-label="cta cta-outline"']} only %}
            {% include 'partial/button.twig' with {'title': 'Button Link', 'style': 'link', 'attributes': ['data-label="link"']} only %}
            </div>
          </aside>
          <aside class="d-flex flex-column grid-gap-20 grid-gap-20 p-20 pb-xl-40 bg-color-black color-white">
            <h2 class="styleguide-subtitle ff-body tt-uppercase fz-12 fw-700 m-0">Dark</h2>
            <div class="d-flex align-items-center grid-gap-20">
    					{% include 'partial/button.twig' with {'title': 'Button CTA', 'style': 'cta', 'variation': 'white', 'attributes': ['data-label-white data-label="cta cta-white"']} only %}
              {% include 'partial/button.twig' with {'title': 'Outline CTA', 'style': 'cta', 'variation': 'white outline', 'attributes': ['data-label-white data-label="cta cta-white cta-outline"']} only %}
              {% include 'partial/button.twig' with {'title': 'Button Link', 'style': 'link', 'variation': 'white', 'attributes': ['data-label-white data-label="link link-white"']} only %}
            </div>
  				</aside>
        </div>
      </div>
		</section>
	</article>
{% endblock %}
