{% extends 'page-builder/block-wrapper.twig' %}
{#
  Title: FAQ
  Description: FAQ
  Category: theme
  Icon: info
  Keywords: faq frequently ask questions answers
  Mode: edit
  PostTypes: page page_section
  SupportsAlign: false
  SupportsMode: true
  SupportsMultiple: true
  Example: { "title": "FAQ" }
#}

{% set post = fields %}

{% set classname = classname|default('') %}
{% set attributes = attributes|default([]) %}
{% set udid = udid|default('pb-row-faq-' ~ random()) %}
{% set title = post.title|default(null) %}
{% set text = post.text|default(null) %}
{% set faqs = Post(post).get_field('faqs')|default(null) %}


{% block row_wrapper %}
<div
  id="{{ udid }}"
  class="pb-row pb-row-faq container-fluid {{ classname }}"
  {{ attributes|join(' ') }}
  data-scroll
  data-scroll-offset="100px,0"
>
  {% include 'partial/accordions.twig' with {
    'accordions': accordions,
    'udid': udid,
    'classname': 'pb-row-faq__faq',
    'attributes': [
      'data-scroll-target="#'~ udid ~'"'
    ]
  } only %}
</div>
{% endblock %}
